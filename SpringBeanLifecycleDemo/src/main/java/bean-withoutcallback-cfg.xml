<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
	http://www.springframework.org/schema/beans/spring-beans.xsd"
	default-init-method="initBean"
	default-destroy-method="destroyBean">

    <bean id="b1" 
    class="app.beanlifecycle.withoutcallbackmethods.Book">
    
            <property name="bookId" value="1"/>
            <property name="bookName" value="Java"></property>
          </bean>

    
<bean id="e1" 
    class="app.beanlifecycle.withoutcallbackmethods.Employee">
   
            <property name="empname" value="smith"/>
            <property name="empaddress" value="Bangalore"></property>
          </bean>
          

</beans>