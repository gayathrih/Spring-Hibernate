<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans 
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-3.0.xsd">
               
     <context:annotation-config/>

  
    
<bean id="e1" class="app.beanlifecycle.annotations.Employee">
    
            <property name="empname" value="smith"/>
            <property name="empaddress" value="Bangalore"></property>
          </bean>


    
<bean id="b1"  name = "Book" class="app.beanlifecycle.annotations.Book">
    
            <property name="bookId" value="2"/>
            <property name="bookName" value="DBMS"></property>
    </bean>
</beans>
